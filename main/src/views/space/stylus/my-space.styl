@import "../../../assets/stylus/px2rem.styl"
@import "../../../assets/stylus/1pxborder.styl"

.my-space
  .switcher-area
    .history
      padding: 0 px2rem(12) px2rem(19) px2rem(12)
      background-color: #f4f4f4
      .history-item
        margin-top: px2rem(8)
        .item-title
          font-size: px2rem(14)
          color: #999999
          line-height: px2rem(34)
        .item-wrapper
          height: px2rem(73.194)
          margin-bottom: px2rem(19)
          &:last-child
            margin-bottom: 0
          .img-container
            position: relative
            float: left
            width: px2rem(117.312)
            height: 100%
            border-radius: px2rem(6)
            background-color: #e7e7e7
            overflow: hidden
            text-align: center
            .placeholder
              font-size: px2rem(40)
              color: rgb(204, 204, 204)
              svg
                height: 100%
            img
              position: absolute
              left: 0
              top: 0
              width: 100%
          .info
            margin-left: px2rem(130)
            .title
              height: px2rem(34)
              line-height: px2rem(17)
              font-size: px2rem(14)
              color: #212121
              overflow: hidden
            .time
              margin-top: px2rem(24)
              height: px2rem(14)
              line-height: px2rem(14)
              font-size: px2rem(12)
              color: #999999
      .tips
        padding-top: px2rem(85.2)
        text-align: center
        img
          display: block
          width: px2rem(280)
          margin: 0 auto
        .text
          font-size: px2rem(16)
          color: #999999
          a
            color: #fb7299
    .my-videos
      padding-top: px2rem(85.2)
      text-align: center
      img
        display: block
        width: px2rem(280)
        margin: 0 auto
      .text
        font-size: px2rem(16)
        color: #999999
  .clear-history
    position: fixed
    bottom: px2rem(25)
    right: px2rem(20)
    z-index: 1
    width: px2rem(40)
    height: @width
    text-align: center
    line-height: @height
    font-size: px2rem(30)