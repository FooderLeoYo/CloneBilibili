@import "../../../../assets/stylus/px2rem.styl"

.header
  position: fixed
  top: 0
  left: 0
  width: 100%
  z-index: 3
.info,
.statistic,
.list
  padding: 0 px2rem(10) 
.info
  position: fixed
  top: px2rem(45)
  width: 100%
  height: px2rem(95)
  padding-top: px2rem(10)
  .image-container
    position: relative
    float: left
    width: px2rem(117.5)
    height: 100%
    border-radius: px2rem(6)
    overflow: hidden
    background-color: #e7e7e7
    text-align: center
    .placeholder
      font-size: px2rem(60)
      color: rgb(204, 204, 204)
      svg
        height: 100%
    img
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
  .info-wrapper
    margin-left: px2rem(130)
    margin-right: px2rem(12)
    height: 100%
    font-size: px2rem(12)
    position: relative
    .title,
    .intro,
    .description
      position: absolute
      height: 33.33%
      display: flex
      align-items: center
    .title
      top: 0
      font-weight: bold
      overflow hidden
      white-space: nowrap
      text-overflow: ellipsis
      color: #212121
      letter-spacing: 0
      word-break: break-all
    .intro,
    .description
      font-size: px2rem(10)
      color: #888888
    .intro
      top: 33.33%
    .description
      top: 66.66%
.statistic
  position: sticky
  top: px2rem(45)
  margin-top: px2rem(140)
  z-index: 3
  height: px2rem(48)
  background-color: #ffffff
  font-size: px2rem(10)
  border-bottom: px2rem(2) solid #e7e7e7
  display: flex
  align-items: center
  .media-count
    flex: 60%
    color: #888888
  .like-statistic
    flex: 40%
    display: flex
    .item
      flex: 33.33%
      position: relative
      .icon
        position: absolute
        top: px2rem(-22)
        left: 50%
        transform:translateX(-50%)
        font-size: px2rem(25)
        color: #333333
      .count
        position: absolute
        top: px2rem(5)
        left: 50%
        transform:translateX(-50%)
        color: #888888
.list
  .video-wrapper
    position: relative
    z-index: 2
    background-color: #ffffff
    height: px2rem(73.08)
    margin-top: px2rem(14)
    &:last-child
      margin-bottom: px2rem(14)
