@import "~@assets/stylus/px2rem.styl"

.fav-item
  display: inline-block
  margin-top: px2rem(19)
  width: 100%
  height: px2rem(73.08)
  &:last-child
    margin-bottom: px2rem(19)
  .image-container
    position: relative
    float: left
    width: px2rem(117.5)
    height: 100%
    border-radius: px2rem(6)
    overflow: hidden
    background-color: #e7e7e7
    text-align: center
    .placeholder
      font-size: px2rem(60)
      color: rgb(204, 204, 204)
    .cover
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
  .info-wrapper
    margin-left: px2rem(130)
    margin-right: px2rem(12)
    height: 100%
    font-size: px2rem(12)
    position: relative
    .title,
    .intro,
    .description
      position: absolute
      height: 33.33%
      display: flex
      align-items: center
    .title
      top: 0
      font-weight: bold
      overflow hidden
      white-space: nowrap
      text-overflow: ellipsis
      color: #212121
      letter-spacing: 0
      word-break: break-all
    .intro,
    .description
      font-size: px2rem(10)
      color: #888888
    .intro
      top: 33.33%
    .description
      top: 66.66%