.result-container
  min-height: 100%
  background-color: #f4f4f4
  .tab-container
    position: fixed
    top: 0
    left: 0
    width: 100%
    top: 2.2rem
    display: flex
    justify-content: space-between
    height: 2.2rem
    padding: 0 .625rem
    background-color: #ffffff
    box-sizing: border-box
    z-index: 1
    .tab-item
      flex: 1
      text-align: center
      .item
        position: relative
        display: inline-block
        padding: 0 .15rem
        line-height: 2.1rem
        font-size: .65rem
        color: #757575
        &.current
          color: #fb7299
          &:after
            position: absolute
            left: 0
            bottom: .3rem
            content: ""
            width: 100%
            border-bottom: .11rem solid #fb7299
  .result-wrapper
    padding-top: 2.2rem
    .sub-tab
      display: flex
      height: 2rem
      justify-content: space-between
      align-items: center
      padding: 0 1.1rem
      background-color: #f9f9f9
      .sort
        font-size: .65rem
        color: #757575
        &.current
          color: #fb7299
    .video-list
      padding: .45rem .625rem
      .video-wrapper
        position relative
        height: 3.654rem
        margin-top: .9rem
        overflow hidden
        &:first-child
          margin-top: 0
  .up-user-list
    padding: 2.2rem .625rem .45rem .625rem
    .up-user-wrapper
      position relative
      height: 3rem
      margin-top: .9rem
      a
        text-decoration: none
      &:first-child
        margin-top: .6rem
      .face
        float: left
        width: 3rem
        height: @width
        border-radius: 50%
        overflow: hidden
        text-align: center
        background-color: #e7e7e7
        svg
          height: 100%
          line-height: @height
          width: 60%
          font-size: px2rem(40)
          color: rgb(204, 204, 204)
        img
          position: absolute
          top: 0
          left 0
          width: 3rem
          border-radius: 50%
      .up-info
        margin-left: 3.6rem
        .name
          font-size: .7rem
          line-height: .7rem
          color: #212121
        .detail
          margin-top: .6rem
          font-size: .6rem
          line-height: .6rem
          color: #999999
          span:first-child
            display: inline-block
            width: 4.2rem
        .sign
          margin-top: .4rem
          height: .7rem
          line-height: .7rem
          font-size: .6rem
          color: #999999
          overflow hidden
  .tips
    padding: 1rem 0
    text-align: center
    img
      display: block
      width: 6.5rem
      margin: 0 auto
    .text
      font-size: .64rem
      color: #999999
  .loading
    position: absolute
    width: 100%
    top: 4.3rem
    bottom: 0
    padding-top: 8rem
    font-size: .65rem
    text-align: center
    color: #999999
