*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  border: 0
  -webkit-tap-highlight-color: transparent

.view
  position: relative

.clearfix
  clear: both
  zoom:1

[class*="clear"]:after
  content: ""
  display: block
  height: 0
  clear: both
  visibility: hidden

a
  color: inherit
  text-decoration: none
  &:hover
    text-decoration: none

ul, ol, li
  list-style: none

input, button, textarea, select, optgroup, option
  border: none

:focus 
  outline: 0
