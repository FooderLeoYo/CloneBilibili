@import "~@assets/stylus/px2rem.styl"
@import "~@assets/stylus/colors.styl"

.checkbox
  width: px2rem(58.33)
  height: px2rem(29.56)
  position: relative
  display: inline-block
  .input
    position: absolute
    width: 100%
    height: 100%
    z-index: 5
    opacity: 0
    cursor: pointer
  .label
    position: absolute
    top: 50%
    transform: translateY(-50%)
    width: px2rem(58.33)
    height: px2rem(19.44)
    display: inline-block
    border-radius: px2rem(25.78)
    transition: 0.4s;
    background: #ccc
    &::after
      content: ''
      position: absolute
      left: 0
      top: px2rem(-6.22)
      z-index: 2
      width: px2rem(29.56)
      height: @width
      border-radius: 100%
      background: #ffffff
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.2)
      transition: 0.4s
  .input:hover + label:after
    box-shadow: 0 px2rem(1.56) px2rem(11.67) 0 rgba(0, 0, 0, 0.2), 0 px2rem(2.33) px2rem(6.22) 0 rgba(0, 0, 0, 0.15)
  .input:checked + label:after
    left: px2rem(31.11)
  .input:checked + label
    background: theme-pink-light
  .input:checked + label:after
    background: theme-pink
