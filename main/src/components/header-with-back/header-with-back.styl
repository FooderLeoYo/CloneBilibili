@import "../../assets/stylus/px2rem.styl"

.header
  display: flex
  height: px2rem(45)
  border-bottom: px2rem(0.2) solid #E6E6FA
  background-color #fff
  .back-wrapper
    width: px2rem(80)
    .back-btn
      position: absolute
      top: 50%
      transform: translateY(-50%)
      padding-left: px2rem(7)
      color: rgb(251, 114, 153)
      font-size: px2rem(20)
      svg
        transform: rotate(90deg)
        transform-origin: 50% 50%
  .logo-wrapper
    flex: 1
    .logo
      height: 100%
      font-size: px2rem(75)
      svg
        display: block
        margin: 0 auto
        height: 100%
  .tools
    position: relative
    width: px2rem(80)
    .search
      position: absolute
      top: 51%
      transform:translateY(-50%)
      right: px2rem(50)
      display: inline-block
      width: px2rem(25)
      height: @width
      line-height: @height
      font-size: px2rem(25)
      color: rgb(138, 138, 138)
    .face
      position: absolute
      top: 50%
      transform:translateY(-50%)
      right: px2rem(18)
      width: px2rem(25)
      height: px2rem(25)
      display: flex
      border-radius: 50%
      overflow: hidden
      justify-content: center
      align-items: center
      img
        height: 100%
    .avatar
      position: absolute
      top: 50%
      transform:translateY(-50%)
      right: px2rem(18)
      display: inline-block
      width: px2rem(25)
      height: px2rem(25)
      line-height: @height
      text-align: center
      font-size: px2rem(25)
      svg
        border-radius: 50%
      .login
        position: absolute
        top: 0
        left: 0
        font-size: px2rem(5) 
        color: #fb7299