@import "../../assets/stylus/px2rem.styl"

* 
  box-sizing: border-box
.header
  display: flex
  height: px2rem(45)
  border-bottom: px2rem(0.2) solid #E6E6FA
  background-color #fff
  .back-wrapper
    width: px2rem(80)
    .back-btn
      position: absolute
      top: 50%
      transform: translateY(-50%)
      width: px2rem(40)
      padding-left: px2rem(7)
      color: rgb(251, 114, 153)
      font-size: px2rem(20)
  .logo-wrapper
    flex: 1
    .logo
      height: 100%
      font-size: px2rem(75)
      svg
        display: block
        margin: 0 auto
        height: 100%
  .tools
    position: relative
    width: px2rem(80)
    .search
      position: absolute
      top: 51%
      transform:translateY(-50%)
      right: px2rem(50)
      display: inline-block
      width: px2rem(25)
      height: @width
      line-height: @height
      font-size: px2rem(25)
      color: rgb(138, 138, 138)
    .face
      img
        position: absolute
        top: 50%
        transform:translateY(-50%)
        right: px2rem(18)
        display: inline-block
        width: px2rem(25)
        height: px2rem(25)
        line-height: @height
        text-align: center
    .avatar
      position: absolute
      top: 50%
      transform:translateY(-50%)
      right: px2rem(18)
      display: inline-block
      width: px2rem(25)
      height: px2rem(25)
      line-height: @height
      text-align: center
      font-size: px2rem(25)
      svg
        border-radius: 50%
