@import "../../../../assets/stylus/px2rem.styl"

.slider-wrapper
  overflow: hidden
  .content-wrapper
    position: relative
    &.moving
      transition: .5s
    &>*
      position: absolute
      top: 0
      left: 0
      right: 0
      width: 100vw
      will-change: transform
      &.current
        position: relative