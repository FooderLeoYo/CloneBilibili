@import "../../assets/stylus/px2rem.styl"
@import "~@assets/stylus/colors.styl"

.drawer
  overflow: hidden
  .drawer-wrapper
    position: absolute
    z-index: 1
    display: none
    padding: 0 px2rem(5)
    background-color: #ffffff
    transition: transform 200ms
    transform: translate3d(0, -100%, 0)
    .drawer-item-container
      display: flex
      flex-wrap: wrap
      .drawer-item
        flex: 0 0 auto
        width: px2rem(60.82)
        padding: px2rem(6) 0
        text-align: center
        span
          display: inline-block
          font-size: px2rem(14)
          line-height: px2rem(30)
          padding: 0 px2rem(2)
          color: #757575
          border-bottom: px2rem(2.2) solid transparent
        &.current
          span
            color: theme-pink
            border-bottom: px2rem(2.2) solid theme-pink
    .drawer-switch
      text-align: center
      font-size: px2rem(18)
      color: #757575
      transform: rotateZ(180deg)
  .overlay-wrapper
    visibility: hidden
    &.show
      visibility: visible
