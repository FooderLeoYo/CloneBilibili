@import "../../../assets/stylus/px2rem.styl"

@keyframes hide {
  0% {opacity: 1;} 
  100% {opacity: 0;}
}
@-webkit-keyframes hide {
  0% {opacity: 1;} 
  100% {opacity: 0;}
}

// @keyframes loadingRotate{
