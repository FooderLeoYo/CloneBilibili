@import "~@assets/stylus/px2rem.styl"

.barr-area
  width: 100%
  height: 100%
  overflow: hidden
  .barr-wrapper
    position: absolute
    z-index: 2
    &.clicked
      z-index: 3
    .text
      font-family: "黑体"
      font-weight: bold
      white-space: pre
      text-shadow: rgb(0, 0, 0) 1px 1px 2px
    .manipulation
      position: absolute
      left: 50%
      transform: translateX(-50%)
      top: 100%
      width: max-content
      height: px2rem(30)
      padding: 0 px2rem(5)
      border: 1px solid #fff
      border-radius: px2rem(15)
      background-color: rgba(0,0,0,.7)
      &::before
        content: ""
        width:0
        height:0
        line-height:0
        position: absolute
        left: 50%
        top: -50%
        transform: translate3d(-50%,px2rem(-8),0)
        font-size:0
        border-width: px2rem(11)
        border-style:solid dashed dashed dashed
        border-color:transparent transparent #fff transparent
      &::after
        content: ""
        width:0
        height:0
        line-height:0
        position: absolute
        left: 50%
        top: -50%
        transform: translate3d(-50%,px2rem(-5),0)
        font-size:0
        border-width: px2rem(10)
        border-style:solid dashed dashed dashed
        border-color:transparent transparent #34342a transparent
      .icon
        display: inline-block
        width: px2rem(20)
        margin: 0 px2rem(5)
        &.like
          position: relative
          span
            position: absolute
            top: px2rem(-22)
          .like
            svg
              font-size: px2rem(19)
        svg
          color: #fff